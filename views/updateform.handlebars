<section id="section" style="height: 800px;">
  <form action="submit" id="charSheet">
    
    <aside id="left">
    <div class="character-images heads">
      <img src="/assets/images/head/head1.png">
      <img src="/assets/images/head/head2.png">
      <img src="/assets/images/head/head3.png">
      <img src="/assets/images/head/head4.png">
      <img src="/assets/images/head/head5.png">
      <img src="/assets/images/head/head6.png">
      <img src="/assets/images/head/head7.png">
      <img src="/assets/images/head/head8.png">
      <img src="/assets/images/head/head9.png">
    </div>
    <div class="character-images chests">
      <img src="/assets/images/chest/chest1.png">
      <img src="/assets/images/chest/chest2.png">
      <img src="/assets/images/chest/chest3.png">
      <img src="/assets/images/chest/chest4.png">
      <img src="/assets/images/chest/chest5.png">
      <img src="/assets/images/chest/chest6.png">
      <img src="/assets/images/chest/chest7.png">
      <img src="/assets/images/chest/chest8.png">
      <img src="/assets/images/chest/chest9.png">
    </div>
    <div class="character-images leg">
      <img src="/assets/images/leg/legs1.png">
      <img src="/assets/images/leg/legs2.png">
      <img src="/assets/images/leg/legs3.png">
      <img src="/assets/images/leg/legs4.png">
      <img src="/assets/images/leg/legs5.png">
      <img src="/assets/images/leg/legs6.png">
      <img src="/assets/images/leg/legs7.png">
      <img src="/assets/images/leg/legs8.png">
      <img src="/assets/images/leg/legs9.png">
    </div>
    </aside>
    <div id="right">
      <div class="across">
        <h2>Name:</h2>
        <label for="char_name">
          <input
            type="text"
            name="char_name"
            id="char_name"
            value="{{char_name}}"
          />
        </label>

        <h3>Age: </h3>
        <label for="age">
          <input type="number" name="age" id="age" value="{{age}}" />
        </label>

        <h3>Sex:</h3>
        <label for="sex">
        Sex:
        <select name="sex" id="sex">
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="other">Other</option>
        </select>
      </label>
        <h3>Pronouns:</h3>
        <label>
        Pronouns:
        <select name="pronouns" id="pronouns">
          <option value="he/him">He/Him</option>
          <option value="she/her">She/Her</option>
          <option value="they/them">They/Them</option>
          <option value="other">Other</option>
        </select>
      </label>
      </div>
      <div class="across">
        <h3>Physical features: </h3>
        <ul>
          <li>Eye Color:
            <label for="eyes">
          <input type="color" name="eyes" id="eyes" value="{{eyes}}" />
        </label>
          </li>
          <li>Hair Length:
            <label for="hair_length">
          <select name="hair_length" id="hair_length">
            <option value="short">short</option>
            <option value="medium">medium</option>
            <option value="long">long</option>
          </select>
        </label>
          </li>
          <li>Hair Color:
            <label for="hair_color">
          <input
            type="color"
            id="hair_color"
            name="hair_color"
            value="{{hair_color}}"
          />
        </label>
          </li>
          <li>Skin Color:
            <label for="skin">
          <input type="color" name="skin" id="skin" value="{{skin}}" />
        </label>
    </div>
          </li>
          <li>Build:
             <label for="build">
          <select name="build" id="build">
            <option value="thin">Thin</option>
            <option value="Average">Average</option>
            <option value="Thick">Thick</option>
          </select>
        </label>
          </li>
        </ul>
      </div>
      <div class="across">
        <p>Description/Backstory:
            <label for="background">
        <textarea
          name="background"
          id="background"
          cols="30"
          rows="10"
        >{{background}}</textarea>
      </label>
        </p>
      </div>
    </div>
    <input type="submit" id="btn" />
  </form>
</section>
