<section id="section">
    <aside id="left">
        <div id="home-characters">
            <img src="{{head}}">
            <img src="{{chest}}">
            <img src="{{leg}}">    
        </div>
    </aside>

    {{!-- <div>
      <div id="inventory">
        <p>Axe</p>
        <img src="../assets/images/inventory/{{item1}}.png">
        <p>Bow & Arrow</p>
        <img src="../assets/images/inventory/{{item2}}.png">
        <p>Healing Potion</p>
        <img src="../assets/images/inventory/{{item3}}.png">
        </div>
    </div> --}}
    <div id="right">
        <div class="across">
          <h2>Name: {{char_name}}</h2>
          <h3>Created by: {{user.name}}</h3>
          <h3>Date Created: {{format_date date_created}}</h3>
          <h3>Age: {{age}}</h3>
          <h3>Sex: {{sex}}</h3>
          <h3>Pronouns {{pronouns}}</h3>
        </div>
        <div class="across">
          <h3>Physical features: </h3>
          <ul class="attributes">
            <li>Eye Color: {{eyes}}</li>
            <li>Hair Length: {{hair_length}}</li>
            <li>Hair Color: {{hair_color}}</li>
            <li>Skin Color: {{skin}}</li>
            <li>Build: {{Build}}</li>
          </ul>
        </div>
        <div class="across">
            <p><strong>Description/Backstory:</strong> {{background}}</p>
        </div>
    </div>
    <div class="button-container">
        <a href="/characters/update/{{id}}"><button id="update">Update</button></a>
        <button id="delete">Delete</button>
      </div>
</section>

<form class="comment-form">
  <div>
    <label for="add-comment">Write Comment<br></label>
    <textarea id="add-comment" name="add-comment" rows="5" cols="500"></textarea>
  </div>
  <button type="submit" id="comment-button">Submit</button>
</form>

{{#each comments as |comment| }}
  {{> comments comment}}
{{/each}}

<script src="/js/comment.js"></script>
<script src="/js/delete.js"></script>
